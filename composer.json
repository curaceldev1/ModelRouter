{
    "name": "curacel/laravel-llm-orchestrator",
    "description": "Vendor-Agnostic LLM Execution Layer for Laravel Applications",
    "keywords": [
        "laravel",
        "llm",
        "ai",
        "orchestrator",
        "generative-ai",
        "llm-drivers",
        "ai-integration"
    ],
    "homepage": "https://github.com/curacel/laravel-llm-orchestrator",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Olayemi Olatayo",
            "email": "olatayo.o@curacel.ai",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "laravel/framework": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.9|^3.0",
        "laravel/pint": "^1.20",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^1.23|^2.1|^3.1"
    },
    "suggest": {
        "laravel/nova": "For managing LLM processes, and analytics through Nova resources"
    },
    "autoload": {
        "psr-4": {
            "Curacel\\LlmOrchestrator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Curacel\\LlmOrchestrator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Curacel\\LlmOrchestrator\\LlmOrchestratorServiceProvider"
            ],
            "aliases": {
                "Llm": "Curacel\\LlmOrchestrator\\Facades\\Llm"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
